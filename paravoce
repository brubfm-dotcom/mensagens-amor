let index = 0;
loadSlide();

function loadSlide() {
    const c = document.getElementById("content");
    const s = slides[index];

    if (!s) return;

    if (s.type === "msg") {
        c.innerHTML = `
            <div class="message">${s.text}</div>
            <button onclick="next()">PrÃ³ximo</button>
        `;
    } else {
        let opts = "";
        s.options.forEach(o => {
            opts += `<button class="option-btn" onclick="answer('${o}', '${s.correct}')">${o}</button>`;
        });

        c.innerHTML = `
            <div class="message">${s.question}</div>
            <div class="options">${opts}</div>
        `;
    }
}

function answer(choice, correct) {
    const c = document.getElementById("content");

    if (choice === correct) {
        successEffect();
        c.innerHTML = `
            <div class="message">
            SÃ³ quero te lembrar que vocÃª Ã© incrÃ­vel, Ã© maravilhosa, Ã© gostosa,
            Ã© inteligente, que vocÃª me encanta, Ã© minha vida,
            que Ã© amada e Ã© tudo que eu sempre sonhei. ðŸ’™ðŸ§¡
            </div>
            <button onclick="next()">PrÃ³ximo</button>
        `;
    } else {
        errorEffect();
        c.innerHTML = `
            <div class="message">
            RESPOSTA ERRADA.<br>
            SÃ³ quero te lembrar que vocÃª Ã© incrÃ­vel, Ã© maravilhosa, Ã© gostosa,
            Ã© inteligente, que vocÃª me encanta, Ã© minha vida,
            que Ã© amada e Ã© tudo que eu sempre sonhei. ðŸ’™ðŸ§¡
            </div>
            <button onclick="next()">PrÃ³ximo</button>
        `;
    }
}

